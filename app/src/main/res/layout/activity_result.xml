<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="618dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015">

        <TextView
            android:id="@+id/tvState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="20dp"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="Dadra and Nagar Haveli and Daman and Diu" />

        <TextView
            android:id="@+id/tvHeading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Total Confirmed Cases"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvTotConfirmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white"
            android:backgroundTintMode="multiply"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textColor="@color/design_default_color_error"
            android:textSize="30sp"
            android:visibility="visible"
            tools:text="123456" />

        <TextView
            android:id="@+id/tvHeading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Total Deaths"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDeaths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textColor="@color/design_default_color_error"
            android:textSize="30sp"
            android:visibility="visible"
            tools:text="123456" />

        <TextView
            android:id="@+id/tvHeading3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Discharged"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDischarged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textColor="@android:color/holo_green_light"
            android:textSize="30sp"
            android:visibility="visible"
            tools:text="123456" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>