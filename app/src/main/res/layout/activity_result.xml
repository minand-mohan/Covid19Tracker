<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904" />

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="601dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015">

        <TextView
            android:id="@+id/tvState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/open_sans_bold"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black"
            android:textFontWeight="1000"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="Karnataka" />

        <TextView
            android:id="@+id/tvHeading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_bold"
            android:paddingHorizontal="10dp"
            android:text="Total Cases"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvTotConfirmed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:paddingHorizontal="10dp"
            android:textColor="#FFB611"
            android:textSize="48sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="123456" />

        <TextView
            android:id="@+id/tvHeading2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_bold"
            android:paddingHorizontal="10dp"
            android:text="Total Deaths"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDeaths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:paddingHorizontal="10dp"
            android:textColor="#FF4439"
            android:textSize="48sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="123456" />

        <TextView
            android:id="@+id/tvHeading3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/open_sans_bold"
            android:paddingHorizontal="10dp"
            android:text="Discharged"
            android:textColor="@color/cardview_dark_background"
            android:textSize="20sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDischarged"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:paddingHorizontal="10dp"
            android:textColor="#30FF77"
            android:textSize="48sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:text="123456" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>